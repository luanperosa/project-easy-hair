<div class="container">
      <a href="/owner/my-saloon/{{ currentSaloon._id }}/edit"><p class="btn-small waves-effect waves-light blue darked-4">Editar este salão</p></a> 
      <a href="/services/{{ currentSaloon._id }}/add"><p class="btn-small waves-effect waves-light deep-orange lighten-3">Adicionar Serviços</p></a> 
</div>

<div class="container">
<table class="highlight">
  <thead>
    <tr>
        <th>Meus Serviços</th>
        <th>Duração (min)</th>
        <th>R$</th>
        <th>Editar</th>
    </tr>
  </thead>

  <tbody>
  {{#each listOfServices }}   
   <tr>  
    
    <td>{{ serviceName }}</td> 
    <td>{{ serviceDuration }}</td>
    <td>{{ servicePrice }}</td>
    <td><a href="/services/{{ _id }}/edit"><i class="small material-icons">edit</i></a></td>
    
    </tr>
  {{/each}}  
  </tbody>
</table>

</div>

<br><br>
<div class="container row">
{{#if currentSaloon.reviewsFromGoogle}}
  <h4 class="center-align">Avaliação de Usuários no Google:</h4>
  <br>
  <div class="col offset-m4 m4 s12 carousel carousel-slider center">
   {{#each currentSaloon.reviewsFromGoogle}}
    <div class="carousel-item  red lighten-2 white-text card-reviews">
      <p class="right-align">{{when}}</p>
      <h4>{{name}}</h4>
      <p>Avaliação: {{rating}}/5 </p>
      
      <p>" {{text}} "</p>

    </div>
  {{/each}}
  </div>
  {{else}}
  <h4 class="center-align">Não há Avaliação de Usuários no Google:</h4>
  {{/if}}
</div>

