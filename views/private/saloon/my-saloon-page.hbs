<div class="container">
  <p><a href="/owner/my-saloon">Voltar para meu(s) estabelecimento(s)</a></p>
  
  {{#if error}}
    <div class="card-panel red lighten-4">{{error}}</div>
  {{/if}}
  {{#if success}}
    <div class="card-panel teal lighten-4">{{success}}</div>
  {{/if}}
</div>

  {{#with currentSaloon }}
    <div class="container row">
      <div class="col m6 s12">
      <h3>{{ saloonName }}</h3>
      <p><strong>Endereço: </strong> {{ fullAddress }}</p>
      <p><strong>Horário de Funcionamento:</strong> {{ businessHours }}</p>
      <p><strong>Email:</strong> {{ saloonEmail }}</p>
      <p><strong>Telefone:</strong> {{ contactNumber }}</p>
      {{#equal ratingFromGoogle 0}}
      <p><strong>Avaliação do Google:</strong> {{ ratingFromGoogle}} (Não há avaliação no Google)</p>
      {{else}}
      <p><strong>Avaliação do Google:</strong> {{ ratingFromGoogle}}/5</p>
      {{/equal}}
      {{#if instagramProfile}}
      <p><a target="_blank" href="https://www.instagram.com/{{ instagramProfile }}">Ir para página do Instagram</a></p>
      {{/if}}
    </div>
      <div class="col m6 s12">
      <div class="carousel carousel-slider">
      {{#if imageGallery}}
      {{#each imageGallery}}
        <a class="carousel-item responsive-img"><img src="{{ this }}"></a>
      {{/each}}
      {{else}}
        <img id="no-image" class="responsive-img" src="{{ imagePath }}" alt=""> 
      {{/if}}
      </div>

      </div>
    {{/with }}
  </div>
  

