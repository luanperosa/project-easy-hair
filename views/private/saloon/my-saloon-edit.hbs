      <thead>
        <tr>
            <th>Nome Estabelecimento</th>
            <th>Endereço</th>
            <th>Preencher cadastro</th> 
        </tr>
        
    </thead>
    <tbody id="queryResult">

    </tbody>
    </table>

  </div>
    <div id="map" class="col m6 s12"></div>

</div>
  
</section>

<div class="row container red lighten-5">
  <h4 class="center-align">Editar este Salão</h4>
  <br>
<div id="clearForm"></div>
  
  
  <form action="/owner/my-saloon/{{this._id}}/edit" id="form-container" class="col s8 offset-s2"  method="POST" enctype="multipart/form-data">


    <div class="row">
      <div class="input-field col s12">
        <input placeholder="Nome do Estabelecimento" id="saloonName" name="saloonName" type="text" class="validate" value="{{ saloonName }}">
        <label for="saloonName">Nome do Estabelecimento</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <input placeholder="Email" id="saloonEmail" name="saloonEmail" type="text" class="validate" value="{{ saloonEmail }}">
        <label for="saloonEmail">Email</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <input placeholder="Usuário do Instagram" id="instagramProfile" name="instagramProfile" type="text" class="validate" value="{{ instagramProfile }}">
        <label for="instagramProfile">Usuário Instagram</label>
      </div>
    </div>
     
    <div class="row">
      <div class="input-field col s12">
        <input placeholder="Telefone" id="contactNumber" name="contactNumber" type="text" class="validate" value="{{ contactNumber }}">
        <label for="contactNumber">Telefone</label>
      </div>
    </div>
 
    <div class="row">
      <div class="input-field col s12">
        <input placeholder="Endereço" id="fullAddress" name="fullAddress" type="text" class="validate" value="{{ fullAddress }}">
        <label for="fullAddress">Endereço</label>
        <p id="error-message"></p>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <textarea placeholder="Horário de Funcionamento" id="businessHours" name="businessHours" type="text" class="validate" rows="7">{{ businessHours }}</textarea>
        <label for="businessHours">Horário de Funcionamento</label>
      </div>
    </div>
    <label for="coverPhoto">Selecione uma Foto de Capa</label><br>
    <input id="coverPhoto" type="file" name="photo" class="">

    <input type="hidden" id="saloonPosition" name="saloonPosition" type="text">
    <input type="hidden" id="placeID" name="placeID" type="text">
    <input type="hidden" id="ratingFromGoogle" name="ratingFromGoogle" type="number">
    <div id="imageGallery"></div>
    <div id="reviewsFromGoogle"></div>
    <br><br>
    <button class="btn waves-effect waves-light" type="submit">Editar meu salão<i class="material-icons right">send</i></button>
  </form>
    <form class="col s8 offset-s2" action="/owner/my-saloon/{{ this._id }}/delete" method="POST">
      <button class="btn-small waves-effect waves-light red darked-4 inline-btn" type="submit">Deletar este salão</button>
    </form>

</div>

  <!-- JavaScript -->
  <script src="/javascripts/add-saloon.js"></script>

