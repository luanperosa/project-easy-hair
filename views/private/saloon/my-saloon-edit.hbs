  <p class="left"><a href="/owner/my-saloon/{{this._id}}">Voltar para á página do estabelecimento</a></p> <br><br><br>
  <div class="col m6 s12">
    <label class="sr-only" for="inputAddressQuery">Digite seu novo endereço</label>
    <input type="text" name="inputAddressQuery" id="inputAddressQuery" placeholder="Pesquisar" aria-label="Search for a spot" aria-describedby="search-spot">
    <div>
      <button id="searchAddressQuery"  class="waves-effect waves-light btn" type="submit"><i class="material-icons medium left">search</i>Pesquisar</button>
    </div>
    
    {{!-- <ul id="queryResult"></ul> --}}
