<div class="container">

<h4> Olá <span class="red-text text-lighten-3">{{ currentUser.userName }}</span>! Confira sua agenda e atualize seus dados</h4>

{{#if success}}
  <div class="card-panel teal lighten-4">{{success}}</div>
{{/if}}

<div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <a href="/schedules/my-schedule">
          <div class="card-content white-text">
          <span class="card-title">Minha agenda</span>
          </div>
        </a>
      </div>
    </div>
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <a href="/user/{{ this._id }}/edit">
          <div class="card-content white-text">
          <span class="card-title">Atualizar meus dados</span>
          </div>
        </a>
      </div>
    </div>
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <a href="/owner/add-saloon">
          <div class="card-content white-text">
          <span class="card-title">Cadastrar meu salão</span>
          </div>
        </a>
      </div>
    </div>
    {{#equal currentUser.role 'Owner'}}
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <a href="/owner/my-saloon">
          <div class="card-content white-text">
          <span class="card-title">Ver meu(s) salão(ões)</span>
          </div>
        </a>
      </div>
    </div>
    {{/equal}}
  </div>
    
</div>
  